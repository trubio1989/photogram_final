<% if @photo.present? %>
  <% if @photo.errors.any? %>
    <% @photo.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new photo
</h1>


<hr>

<form action="/create_photo" method="post">

  <div class="form-group">
    <label for="caption">
      Caption
    </label>

    <textarea id="caption" name="caption" class="form-control" rows="3"><%= @photo.caption %></textarea>
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @photo.image %>">
  </div>

  <div class="form-group">
    <label for="likes_count">
      Likes count
    </label>

    <input type="text" id="likes_count" name="likes_count" class="form-control" value="<%= @photo.likes_count %>">
  </div>

  <div class="form-group">
    <label for="comments_count">
      Comments count
    </label>

    <input type="text" id="comments_count" name="comments_count" class="form-control" value="<%= @photo.comments_count %>">
  </div>

  <input type="hidden" name="owner_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create photo
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
