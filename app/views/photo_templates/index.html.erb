<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All photos
    </h1>

    <a href="/photos/new" class="btn btn-block btn-outline-secondary">
      Add a new photo
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comments count
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <!-- Display photo.id start -->
        <td>
          <%= photo.id %>
        </td>
        <!-- Display photo.id end -->

        <!-- Display photo.caption start -->
        <td>
          <%= photo.caption %>
        </td>
        <!-- Display photo.caption end -->

        <!-- Display photo.image start -->
        <td>
          <%= photo.image %>
        </td>
        <!-- Display photo.image end -->

        <!-- Display photo.likes_count start -->
        <td>
          <%= photo.likes_count %>
        </td>
        <!-- Display photo.likes_count end -->

        <!-- Display photo.comments_count start -->
        <td>
          <%= photo.comments_count %>
        </td>
        <!-- Display photo.comments_count end -->

        <!-- Display photo.owner_id start -->
        <td>
          <%= photo.poster.email %>
        </td>
        <!-- Display photo.owner_id end -->

        <!-- Display photo.created_at start -->
        <td>
          <%= time_ago_in_words(photo.created_at) %> ago
        </td>
        <!-- Display photo.created_at end -->

        <!-- Display photo.updated_at start -->
        <td>
          <%= time_ago_in_words(photo.updated_at) %> ago
        </td>
        <!-- Display photo.updated_at end -->

        <td>
          <a href="/photos/<%= photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @photos, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
