<% if @follow_request.errors.any? %>
  <% @follow_request.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit follow request #<%= @follow_request.id %>
</h1>

<hr>

<form action="/update_follow_request/<%= @follow_request.id %>" method="post">

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @follow_request.status %>">
  </div>

  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <%= select_tag(:recipient_id, options_from_collection_for_select(User.all, :id, :email, @follow_request.recipient_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :email, @follow_request.sender_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update follow request
  </button>
</form>

<hr>

<a href="/follow_requests">
  Go back
</a>
